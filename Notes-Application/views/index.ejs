<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input type="text" class="block w-full rounded-md outline-none px-10 py-2 bg-zinc-800 text-white" 
                       placeholder="Title goes on..." name="title">
                <textarea class="block w-full mt-2 rounded-md px-5 py-2 outline-none resize bg-zinc-800 text-white" 
                          placeholder="Description goes on..." name="desc"></textarea>
                <input type="submit" value="Create" class="mt-2 text-white bg-blue-600 px-8 py-1 rounded-md cursor-pointer">
            </form>
        </div>




        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if (Files.length > 0) { %>
                <% Files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between mt-3 items-center ">
                        <a class="text-blue-500 inline-block " href="/Files/<%= val%>">Read More.</a>
                        <a class="text-zinc-600" href="/edit/<%= val%>">Edit</a>
                    </div>
                    </div>
                <% }); %>
            <% } else { %>
                <h3 class="text-zinc-600">No Tasks Yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>
